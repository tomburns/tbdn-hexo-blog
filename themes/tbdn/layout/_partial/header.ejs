<section class="hero is-medium is-primary is-bold">
<div class="hero-body">
  <div class = "container has-text-centered">
    <h1 class="title">
      <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
    </h1>
    <% if (theme.subtitle){ %>
    <h2 id="subtitle-wrap">
      <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
    </h2>
    <% } %>
  </div>
</div>
<div id="header-inner" class="inner">
  <nav class="nav has-shadow" id="main-nav">
    <div class="nav-left">
      <% for (var i in theme.menu){ %>
      <a class="nav-item" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
      <% } %>
    </div>
    <% if (theme.rss){ %>
    <a id="nav-rss-link" class="nav-item" href="<%- theme.rss %>" title="Feed"><i class="rss-square"></i>lol</a>
    <% } %>
  </nav>
</div>
</div>
</section>
